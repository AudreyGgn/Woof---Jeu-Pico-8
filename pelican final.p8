--player

function create_player()
 p={x=2,y=4,sprite=1}
end


function draw_player()
	spr(p.sprite,p.x*8,p.y*8)
end


function player_movement()
 newx=p.x
 newy=p.y
 
 newx+=0.05
 
 if not check_flag(0,newx+0.95,newy) then
		p.x=newx
		p.y=newy
	end
end
